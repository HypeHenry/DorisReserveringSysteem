{% extends 'AppointmentBundle::base.html.twig' %}

{% block body %}
    <h1>Appointment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Hairdescription</th>
                <td>{{ appointment.hairDescription }}</td>
            </tr>
            <tr>
                <th>Appointment</th>
                <td>{% if appointment.appointment %}{{ appointment.appointment|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('appointment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('appointment_edit', { 'id': appointment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
