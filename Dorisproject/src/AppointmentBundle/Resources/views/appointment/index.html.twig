{% extends 'AppointmentBundle::base.html.twig' %}

{% block body %}
    <h1>Appointments list</h1>

    <table class="table">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Hairdescription</th>
                <th>Appointment</th>
                <th>Customer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr>
                {#<td><a href="{{ path('appointment_show', { 'id': appointment.id }) }}">{{ appointment.id }}</a></td>#}
                <td>{{ appointment.hairDescription }}</td>
                <td>{% if appointment.appointment %}{{ appointment.appointment|date(' l d F Y H:i:s') }}{% endif %}</td>
                <td>{{ appointment.customer }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('appointment_show', { 'id': appointment.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('appointment_edit', { 'id': appointment.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('appointment_new') }}">Create a new appointment</a>
        </li>
    </ul>
{% endblock %}
